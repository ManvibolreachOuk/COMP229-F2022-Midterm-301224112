<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>
      
      <form class="form" method="post">
        <div class="form-group">
          <label for="FacultyidTextField">Faculty ID</label>
          <input
            type="number"
            class="form-control"
            id="FacultyidTextField"
            placeholder="Faculty Id"
            name="Facultyid"
            
            required
          />
        </div>

        <div class="form-group">
          <label for="FacultynameTextField">Faculty Name</label>
          <input
            type="text"
            class="form-control"
            id="FacultynameTextField"
            placeholder="Faculty Name"
            name="Facultyname"
            
            required
          />
        </div>

        <div class="form-group">
          <label for="DepartmentTextField">Department</label>
          <input
            type="text"
            class="form-control"
            id="DepartmentTextField"
            placeholder="Department"
            name="Department"
            
            required
          />
        </div>

        <div class="form-group">
          <label for="SubjectTextField">Subject</label>
          <input
            type="text"
            class="form-control"
            id="SubjectTextField"
            placeholder="Subject"
            name="Subject"
            
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check-square-o"></i> Submit
        </button>
        <a href="/faculties" class="btn btn-warning"
          ><i class="fa fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>